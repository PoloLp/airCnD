<div class="container">
  <div class="row">
    <% @desks.reverse.each do |desk|%>
      <% if !desk.photo.file.nil? %>
        <% i_path = cl_image_path desk.photo, height: 300, width: 400, crop: :fill %>
      <% else %>
        <% i_path = '' %>
      <% end %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to desk_path(desk) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= i_path %>')">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= desk.title %></h2>
              <p><%= desk.price %>â‚¬</p>
            </div>
            <img class="card-user" src="">
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
