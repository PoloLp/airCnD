<div class="container">

   <h1 class= "text-center"><%= "Congrats #{@user.username}! You just found your profil page" %></h1>

  <div class="row">
    <h1><%= "Username : #{@user.username}" %></h1>
    <h1><%= "email adress : #{@user.email}" %></h1>
    <h1><%= "Your account was created : #{@user.created_at}" %></h1>
    <h1><%= "Last update on your account : #{@user.updated_at}" %></h1>
  </div>

  <div class="row">
    <h1 class= "text-center">Your desks</h1>
    <h1>Please find all your desks bellow</h1>
      <% @user.desks.reverse.each do |desk|%>
        <div class="col-xs-12 col-sm-4">
          <%= link_to desk_path(desk) do %>
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= safe_desk_img_path(desk) %>')">
              <div class="card-category">Popular</div>
              <div class="card-description">
                <h2><%= desk.title %></h2>
                <p><%= desk.price %>€</p>
              </div>
              <img class="card-user" src="">
            </div>
          <% end %>
        </div>
      <% end %>
  </div>

  <div class="row">
    <h1 class= "text-center">Your bookings</h1>
    <h1>Please find all your bookings bellow</h1>
      <% @user.bookings.reverse.each do |booking|%>
        <div class="col-xs-12 col-sm-4">
            <h1><%= booking.user.username %></h1>
            <h1><%= booking.start_at %>€</p>
            <h1><%= booking.end_at %>€</p>
        </div>
      <% end %>
  </div>
</div>

